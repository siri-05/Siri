<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:c="http://www.springframework.org/schema/c"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- setter injection -> intializing student variables using setter methods -->
	<bean id="std1" class="com.spring.Spring_demo.student">
		<property name="s_id" value="123" />
		<property name="s_name">
			<value>Siri</value>
		</property>
	</bean>
	<bean id="std2" class="com.spring.Spring_demo.student">
		<property name="s_id" value="184" />
		<property name="s_name">
			<value>Anu</value>
		</property>
	</bean>

	<!-- constructor injection -> intializing student variables using parameterised constructor -->
	<bean name="cer" class="com.spring.Spring_demo.certificate" c:name="java full stack"></bean>
	<bean name="per" class="com.spring.Spring_demo.person">
		<!-- the values given here shold be in the same order as in the parameterised constructor of person -->
		<constructor-arg value="147" type="int"></constructor-arg>
		<constructor-arg value="Ankush"></constructor-arg>
		<constructor-arg ref="cer"></constructor-arg>
	</bean>
</beans>